    {
      "name": "Equipment Display",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "Raft Weight",
      "type": "checkbox",
      "default": true
    },
    {
      "name": "Compass",
      "type": "checkbox",
      "default": true

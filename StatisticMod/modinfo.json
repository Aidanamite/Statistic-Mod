      "name": "Raft Center Color",
      "type": "slider",
      "default": 510,
      "range": {
        "type": "custom",
        "min": 0,
        "max": 1530,
        "decimals": 0
      }
    },
    {
      "name": "Health Bar Max Draw Distance",
      "type": "slider",
      "default": 10,
      "range": {
        "min": 0,
        "max": 150
      }
    },
    {
      "name": "HUD X Offset",
      "type": "slider",
      "default": 0.042,
      "range": {
        "type": "percent",
        "min": 0,
        "max": 1,
        "decimals": 1
      }
